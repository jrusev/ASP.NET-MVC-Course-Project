@model AdList.Web.InputModels.Ads.AdInputModel
@{
    ViewBag.Title = "Post new ad";
}

<section>
    <div>
        <div class="container">
            @using (Html.BeginForm("Create", "Ads", FormMethod.Post, new { @class = "form-horizontal", name = "createItemForm" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })

                <fieldset>
                    <legend>Post new ad</legend>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { placeholder = "Title" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { placeholder = "Description" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryId, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(
                                m => m.CategoryId,
                                new SelectList(Model.CategoryOptions, "Id", "Name"), //, Model.CategoryOptions.First().Id),
                                new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Price, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">                           
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })                           
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ImageUrl, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ImageUrl, new { placeholder = "Image url" })
                        </div>
                    </div>

                    <div class="pull-right">
                        <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
                        <a href="/" class="btn btn-danger btn-lg">Cancel</a>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</section>
