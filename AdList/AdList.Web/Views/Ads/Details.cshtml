@model AdList.Web.ViewModels.Ads.AdDetailViewModel
@{
    ViewBag.Title = "View Ad";
}

<section>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h2>@Model.Title</h2>
                    <div class="thumbnail"><img src="/images/@Model.ImageUrl" alt="@Model.Title"></div>
                    <p> <strong>Description:</strong></p>
                    <p class="">@Model.Description</p>
                </div>
                <div class="col-md-4 col-md-offset-4">
                    <div class="row well">
                        <h3>@Html.DisplayFor(x => x.Price)</h3>
                        <br><strong>Published on:</strong> @Html.DisplayFor(x => x.CreatedOn)
                    </div>
                    <div class="row well">
                        <div>
                            <strong>User:</strong><a href="/user/getById/@Model.Author.Id"> @Model.Author.FirstName @Model.Author.LastName</a><br>
                            <div><strong>City:</strong> @Model.Author.City<br></div>
                            <div><strong>Contact:</strong> @Model.Author.PhoneNumber</div>
                            <br>
                            <div>
                                <a href="/Messages/Send?userId=@Model.Author.Id" class="btn btn-info">Send message</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>