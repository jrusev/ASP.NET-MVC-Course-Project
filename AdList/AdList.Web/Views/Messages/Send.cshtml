@model AdList.Data.Models.Message
@{
    ViewBag.Title = "Send";
}

<section>
    <div>
        <div class="container">
            @using (Html.BeginForm("Send", "Messages", FormMethod.Post, new { @class = "form-horizontal", name = "sendMessageForm" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ToId)

                <fieldset>
                    <legend>Send Message</legend>

                    <div class="form-group">
                        <label for="title" class="col-md-2 control-label">To: </label>
                        <div class="col-md-10 pull-left">
                            <label for="title" class="col-md-2 control-label form-control" style="text-align:left">@ViewBag.ToUserName</label>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { placeholder = "Title" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Content, new { placeholder = "Content", @class="form-control", rows="3" })
                        </div>
                    </div>

                    <div class="pull-right">
                        <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
                        <a href="/" class="btn btn-danger btn-lg">Cancel</a>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</section>

