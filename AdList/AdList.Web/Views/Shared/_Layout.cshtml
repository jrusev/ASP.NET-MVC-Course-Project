<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AdList</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("AdList", "Index", "Home", new { area = "" }, new { @class = "navbar-brand scroll-top logo" })*@

                <a href="@Url.Action("Index", "Home")" class="navbar-brand scroll-top logo">
                    <b>AdList</b>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("All ads", "All", "Ads")</li>
                </ul>

                @Html.Partial("_LoginPartial")
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Create", "Ads")"><span class="glyphicon glyphicon-plus-sign"></span> New Ad</a>
                        </li>
                        <li>
                            <a href="@Url.Action("MyAds", "User")"><span class="fa fa-shopping-cart"></span> My Ads</a>
                        </li>
                        <li>
                            <a href="/Messages/Inbox"><span class="fa fa-envelope"></span> Inbox</a>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </header>
    <section>
        <div class="container body-content">
            @*<ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li><a href="#">Library</a></li>
                <li class="active">Data</li>
            </ol>*@
            @RenderBody()
            <hr />
        </div>
    </section>
    <footer class="panel-footer">
        <p class="text-center text-primary">
            &copy; <span>
                <a href="https://github.com/jrusev/ASP.NET-MVC-Course-Project">
                    Jivko Rusev @DateTime.Now.Year
                </a>
            </span>
        </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
