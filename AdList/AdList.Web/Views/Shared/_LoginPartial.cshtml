@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="" data-toggle="dropdown" class="dropdown-toggle"><span class="fa fa-user"></span> @User.Identity.GetUserName() <span class="caret"></span></a>
            <ul class="dropdown-menu">                
                <li class=""><a href="/Manage"><span class="fa fa-fw fa-gear"></span>Manage Profile</a></li>
                @if (User.IsInRole("Administrator"))
                {
                    <li><a href="/Admin"><span class="fa fa-fw fa-gear"></span>Administration</a></li>
                }                
                <li class="divider"></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="fa fa-fw fa-power-off"></span>Sign Out</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
