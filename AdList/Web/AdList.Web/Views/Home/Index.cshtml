@model IEnumerable<AdList.Web.ViewModels.Ads.AdDetailViewModel>
@{
    ViewBag.Title = "Home Page";
}
<div class="container">

    <div class="jumbotron">
        <div id="logo-title" class="h1">Ad List</div>
        <h2 class="logo-subtitle">The best deals for used items</h2>
    </div>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            @using (Html.BeginForm("All", "Ads", FormMethod.Get, new { @class = "", role = "search" }))
            {
                <div class="input-group">
                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control search-box", placeholder = "Search" })
                    <div class="input-group-btn">
                        <button type="submit" value="Search" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Featured</h1>
            @Html.Partial("_AdsPartial")
        </div>
    </div>
</div>
