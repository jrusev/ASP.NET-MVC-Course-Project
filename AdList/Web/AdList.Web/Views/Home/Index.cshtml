@model IEnumerable<AdList.Web.ViewModels.Home.HomeAdViewModel>
@{
    ViewBag.Title = "Home Page";
}
<div class="container">

    <div class="jumbotron">
        <div id="logo-title" class="h1">Ad List</div>
        <h2 class="logo-subtitle">The best deals for used items</h2>
    </div>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form role="search" class="navbar-form"></form>
            <div class="input-group">
                <input type="text" placeholder="Search" name="q"  class="form-control">
                <div class="input-group-btn"><button class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Featured</h1>
            @Html.Partial("_AdsPartial")
        </div>
    </div>
</div>
